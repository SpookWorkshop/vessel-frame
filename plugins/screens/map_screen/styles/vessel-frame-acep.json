{
  "version": 8,
  "name": "Vessel Frame - ACeP",
  "metadata": {
    "description": "Style for Gallery 7-colour displays (black, white, red, green, blue, yellow, orange)."
  },
  "sources": {
    "mapbox-streets": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v8"
    }
  },
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#FFFFFF"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "mapbox-streets",
      "source-layer": "water",
      "paint": {
        "fill-color": "#0066CC",
        "fill-opacity": 1
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "mapbox-streets",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#0066CC",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 1,
          14, 3
        ]
      }
    },
    {
      "id": "water-boundary",
      "type": "line",
      "source": "mapbox-streets",
      "source-layer": "water",
      "paint": {
        "line-color": "#000000",
        "line-width": 2
      }
    },
    {
      "id": "landuse-park",
      "type": "fill",
      "source": "mapbox-streets",
      "source-layer": "landuse",
      "filter": [
        "in",
        "class",
        "park",
        "pitch",
        "grass",
        "cemetery"
      ],
      "paint": {
        "fill-color": "#00AA44",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "landuse-industrial",
      "type": "fill",
      "source": "mapbox-streets",
      "source-layer": "landuse",
      "filter": [
        "in",
        "class",
        "industrial",
        "commercial"
      ],
      "paint": {
        "fill-color": "#FF8800",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "mapbox-streets",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#CCCCCC",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "mapbox-streets",
      "source-layer": "road",
      "filter": [
        "==",
        "class",
        "motorway"
      ],
      "paint": {
        "line-color": "#FFCC00",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 2,
          14, 4
        ]
      }
    },
    {
      "id": "road-trunk",
      "type": "line",
      "source": "mapbox-streets",
      "source-layer": "road",
      "filter": [
        "==",
        "class",
        "trunk"
      ],
      "paint": {
        "line-color": "#FFDD44",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 1.5,
          14, 3
        ]
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "mapbox-streets",
      "source-layer": "road",
      "filter": [
        "==",
        "class",
        "primary"
      ],
      "paint": {
        "line-color": "#FF8800",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 1,
          14, 2
        ]
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "mapbox-streets",
      "source-layer": "road",
      "filter": [
        "==",
        "class",
        "secondary"
      ],
      "paint": {
        "line-color": "#AAAAAA",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 0.5,
          14, 1.5
        ]
      }
    },
    {
      "id": "rail",
      "type": "line",
      "source": "mapbox-streets",
      "source-layer": "road",
      "filter": [
        "==",
        "class",
        "major_rail"
      ],
      "paint": {
        "line-color": "#333333",
        "line-width": 1,
        "line-dasharray": [4, 2]
      }
    },
    {
      "id": "place-label-city",
      "type": "symbol",
      "source": "mapbox-streets",
      "source-layer": "place_label",
      "filter": [
        "==",
        "class",
        "settlement"
      ],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["DIN Pro Bold", "Arial Unicode MS Bold"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 14,
          14, 20
        ],
        "text-transform": "uppercase",
        "text-letter-spacing": 0.1
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-label-neighbourhood",
      "type": "symbol",
      "source": "mapbox-streets",
      "source-layer": "place_label",
      "filter": [
        "==",
        "class",
        "settlement_subdivision"
      ],
      "minzoom": 12,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["DIN Pro Medium", "Arial Unicode MS Regular"],
        "text-size": 12,
        "text-transform": "uppercase",
        "text-letter-spacing": 0.05
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "water-label",
      "type": "symbol",
      "source": "mapbox-streets",
      "source-layer": "natural_label",
      "filter": [
        "in",
        "class",
        "water",
        "bay",
        "sea",
        "ocean"
      ],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["DIN Pro Italic", "Arial Unicode MS Regular"],
        "text-size": 14,
        "text-letter-spacing": 0.2
      },
      "paint": {
        "text-color": "#004488",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1
      }
    }
  ]
}
